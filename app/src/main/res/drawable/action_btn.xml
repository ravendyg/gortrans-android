<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="48dp" />
            <stroke android:width="1dp" android:color="#eeeeee" />
            <gradient android:angle="-90" android:startColor="#777777" android:endColor="#999999"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="48dp" />
            <stroke android:width="1dp" android:color="#eeeeee" />
            <solid android:color="#999999"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="48dp" />
            <stroke android:width="1dp" android:color="#ddeeeeee" />
            <gradient android:angle="-90" android:startColor="#ddcccccc" android:endColor="#dd999999" />
        </shape>
    </item>
</selector>